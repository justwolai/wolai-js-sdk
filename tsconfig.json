{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/lib/types"
  ],
  "compilerOptions": {
    "outDir": "./dst/",
    "sourceMap": false,
    "pretty": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2016",
    "strict": true,
    "lib": ["es5", "es6", "es7"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  }
}
